<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/card_hotel_list"
            android:padding="@dimen/_10sdp"
            android:elevation="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="7"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_28sdp"
                            android:id="@+id/img_veg"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/veg"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_food_name"
                            android:textSize="@dimen/_12ssp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:text="Spicy Panner Tikka Roll"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/black"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:gravity="right"
                            android:id="@+id/ll_add"
                            android:layout_gravity="end"
                            android:background="@drawable/gradient"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/ll_add_quantity"
                                android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:text="ADD"
                                android:layout_marginTop="-1dp"
                                android:textSize="@dimen/_15ssp"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tv_add"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="-1dp"
                                android:id="@+id/add_order"
                                android:src="@drawable/ic_add_black_24dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:id="@+id/ll_count"
                                android:background="@drawable/cart_bg"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/iv_minus"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:foreground="?selectableItemBackground"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/ic_remove_black_24dp" />

                                <TextView
                                    android:id="@+id/tv_quantity1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@color/background_steps"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:padding="@dimen/_2sdp"
                                    android:text="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />

                                <ImageButton
                                    android:id="@+id/iv_plus"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:foreground="?selectableItemBackground"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/ic_add_black_24dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:background="@drawable/gradient"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hotel_name"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="In Panner Land "
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_spicy"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="SPICY"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/gradient2"
                        android:fontFamily="@font/poppins_bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/ratingBar_overall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-40dp"
                            android:max="5"
                            android:numStars="5"
                            android:scaleX="0.5"
                            android:stepSize="1"
                            android:scaleY="0.5"
                            android:theme="@style/RatingBar"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:layout_gravity="center"
                            android:id="@+id/tv_numb"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Votes"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:id="@+id/tv_vote"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Rs"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:id="@+id/rupee"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:id="@+id/tv_money"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>
